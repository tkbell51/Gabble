<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Gabble-Home</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.1/css/materialize.min.css">

  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <ul id="dropdown1" class="dropdown-content">
    <li>
      <form class='signout' action='/gabble/signout' method='post'>
        <div class="input-field">
          <li>
            <button class="btn-flat waves-effect waves-light center" type="submit" name="action">Sign Out

          </button>
        </li>

        </div>
      </form>
    </li>

  </ul>
    <nav class="orange">
      <div class="container">
        <div class="nav-wrapper">
          <a href="/gabble/" class="brand-logo center">Gabble</a>


              <ul class="right hide-on-med-and-down">
              <li ><a class="white-text dropdown-button btn-flat" href="#!" data-activates="dropdown1">{{signedInUser}}<i class="material-icons right">arrow_drop_down</i></a></li>
          </ul>
        </div>
      </div>
    </nav>



<main>

  <div id="newGab" class="container row">

  <form action="/gabble/" method="post">
    <div class="row">
    <div class="col m9 input-field ">
      <i class="material-icons prefix">message</i>
      <input id="newPost" type="text" name="newPost" placeholder="What you want to Gab about?">
    </div>
    <div class="newGabButton col m3">
      <button class="btn waves-effect waves-light orange" type="submit" name="action">Create Gab
      </button>
    </div>

</div>
  </form>
</div>

<div class="divider"></div>

<div class="container">

    {{#model}}
          <div class="card grey darken-3">
            <a href="/gabble/{{id}}">
            <div class="card-content white-text">
              <span class="card-title">@{{users.username}} - {{createdAt}}</span>
            <h3 class="orange-text">{{gab}}</h3>
            </div>
            <div class="card-action">
              <div class="row">
                <div class="col s6 m6">
                  <form class='like' action="/gabble/like/{{id}}" method="post">
                    <div class="row">
                      <div class="center-text">
                        <button class="valign-wrapper btn btn-large waves-effect waves-light orange" name="like"><i class="material-icons">thumb_up</i>
                          {{#UserLikes.length}}
                          <span class="badge white-text">{{.}}</span>
                          {{/UserLikes.length}}
                          {{^UserLikes.length}}
                          <span class="badge white-text">No Likes<span>
                          {{/UserLikes.length}}
                        </button>
                      </div>
                    </div>
                  </form>
                </div>
                <div class="col s6 m6 right-align">
                  {{#loggedInUser}}
                  <form class="delete" action="/gabble/delete/{{id}}" method="post">
                    <button class="btn-floating btn-large waves-effect waves-light orange" name="delete"><i class="material-icons">delete</i></button>
                  </form>
                {{/loggedInUser}}
                {{^loggedInUser}}
                {{/loggedInUser}}
                </div>
              </div>
            </div>
          </a>
          </div>
        <p>{{message}}<p>
      {{/model}}
      <div class="fixed-action-btn">
        <a href="#newGab" class="btn-floating btn-large waves-effect waves-light orange"><i class="material-icons">message</i></a>
      </div>

    </main>
    <script
  src="https://code.jquery.com/jquery-3.2.1.js"
  integrity="sha256-DZAnKJ/6XZ9si04Hgrsxu/8s717jcIzLy3oi35EouyE="
  crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.1/js/materialize.min.js"></script>
    <script>
      $(".dropdown-button").dropdown();
    </script>
  </body>
  </html>
